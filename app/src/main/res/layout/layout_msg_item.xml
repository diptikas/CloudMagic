<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_10"
    >
    <TextView
        android:layout_toLeftOf="@+id/starred_icon"
        android:id="@+id/participants_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:layout_marginLeft="@dimen/dimen_10"
        android:text=""
        android:textSize="@dimen/dimen_18"/>

    <TextView
        android:id="@+id/subject_text"
        android:layout_below="@+id/participants_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_one"
        android:layout_marginLeft="@dimen/dimen_10"
        android:text=""
        android:textSize="@dimen/dimen_14"/>

    <TextView
        android:id="@+id/preview_text"
        android:layout_toLeftOf="@+id/time"
        android:layout_below="@+id/subject_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_grey"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/dimen_10"
        android:text=""
        android:textSize="@dimen/dimen_12"/>

    <TextView
        android:id="@+id/time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_below="@+id/subject_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_grey"
        android:layout_marginLeft="@dimen/dimen_5"
        android:text=""
        android:textSize="@dimen/dimen_12"/>

    <ImageView
        android:id="@+id/starred_icon"
        android:layout_width="@dimen/dimen_18"
        android:layout_alignParentRight="true"
        android:layout_height="@dimen/dimen_18"
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_marginLeft="@dimen/dimen_5"
        android:src="@drawable/unstar"/>
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginTop="@dimen/dimen_5"
        android:background="@color/dark_grey"/>
</LinearLayout>